div#topContainer.row
    div.span8.column
        a(href="/")
            img(src="/art/logo2.png")
    div#loginBox.span8.column
      - if (typeof logged_in == 'undefined' || logged_in == false)
        form(action='/login', method='post')
            div.clearfix
                input(type='text', name='username', placeholder='Email or nickname', required)   
            div.clearfix
                input(type='password', name='password', placeholder='Password', required)
            div.clearfix
                button.btn.primary(type='submit') Login
                span or 
                    a(href='/register') register
      - else
        div#myUsername #{username}
        a#logout(href='/logout') logout     
