div#topContainer.row
    div.span7.column
        a(href="/")
            img(src="/art/logo2.png")
    div.span5.column#vote
        div.popover.left
            div.inner
                h4.title VOTE 
                div.content Vote for Ragechat on <br /> Node.js Knockout contest: <iframe src="http://nodeknockout.com/iframe/upallnight" frameborder=0 scrolling=no allowtransparency=true width=115 height=25></iframe>
                

    div#loginBox.span4.column
      - if (typeof logged_in == 'undefined' || logged_in == false)
        form(action='/login', method='post')
            div.clearfix
                input(type='text', name='username', placeholder='Email or nickname', required)   
            div.clearfix
                input(type='password', name='password', placeholder='Password', required)
            div.clearfix
                button.btn.primary(type='submit') Login
                span or 
                    a(href='/register') register
      - else
        h2#myUsername #{username}
        a#logout(href='/logout') logout 

